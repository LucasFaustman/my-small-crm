                        <button class="btn btn-danger add-btn" data-bs-toggle="modal" data-bs-target="#showModal"><i
                                class="ri-add-line align-bottom me-1"></i> Create Task</button>

                    </div>
                </div>
            </div>
            
            <!--end card-body-->
            <div class="card-body">
                <div class="table-responsive table-card mb-4">
                    <table class="table align-middle table-nowrap mb-0" id="tasksTable">
                        <thead class="table-light text-muted">
                            <tr>
                                <th class="sort" data-sort="tasks_name"><a href="tasksTitleFieldVal">Task</th></a>
                                <th class="sort" data-sort="client_name"><a href="clientNameFieldVal">Lead Name</th></a>
                                <th class="sort" data-sort="due_date"><a href="dateDueFieldVal">Due Date</th></a>
                                <th class="sort" data-sort="status"><a href="statusFieldVal">Status</th></a>
                                <th class="sort" data-sort="priority"><a href="priorityFieldVal">Priority</a></th>
                            </tr>
                        </thead>
                        
                        <tbody class="list form-check-all" id="tasksList">
                                            <% if (tasks.filter(task => task.statusFieldVal !== "Completed").length > 0) { %>

                                            <% tasks.filter(task => task.statusFieldVal !== "Completed").forEach(function (task) { %>
                                            <tr>
                                                
                                                
                                                <td class="id" style="display:none;"><%= task._id %></td>
                                                <td>
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1 tasks_name"><%=task.tasksTitleFieldVal %></div>
                                                        <div class="flex-shrink-0 ms-4">
                                                            <ul class="list-inline tasks-list-menu mb-0">
                                                                <li class="list-inline-item"><a class="edit-item-btn" href="#showModal"
                                                                        data-bs-toggle="modal"><i
                                                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i></a>
                                                                </li>
                                                                <li class="list-inline-item">
                                                                    <a class="remove-item-btn" data-bs-toggle="modal"
                                                                        href="#deleteOrder">
                                                                        <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="client_name"><%=task.clientNameFieldVal %></td>
                                                
                                                <td class="due_date"><%= task.dateDueFieldVal.toLocaleString("pt-BR", {timeZone:"GMT", day: "numeric", month: "numeric", year:"numeric"}); %></td> 
                                                <td class="status">
                                                    <span  class="badge badge-soft-secondary text-uppercase"><%=task.statusFieldVal %></span>
                                                </td>
                                                <td class="priority">
                                                    <span class="badge bg-danger text-uppercase"><%=task.priorityFieldVal %></span>
                                                </td>
                                                
                                            </tr>
                                            
                                        </tbody> <% }) %>
                                        
                                        <% } else { %>
                                                <tr>
                                                    
                                                    
                                                    <td class="id" style="display:none;">1</td>
                                                    <td>
                                                        <div class="d-flex">
                                                            <div class="flex-grow-1 tasks_name">Your tasks are empty!</div>
                                                            <div class="flex-shrink-0 ms-4">
                                                                <ul class="list-inline tasks-list-menu mb-0">
                                                                    <li class="list-inline-item"><a class="edit-item-btn" href="#showModal"
                                                                            data-bs-toggle="modal"><i
                                                                                class="ri-pencil-fill align-bottom me-2 text-muted"></i></a>
                                                                    </li>
                                                                    <li class="list-inline-item">
                                                                        <a class="remove-item-btn" data-bs-toggle="modal"
                                                                            href="#deleteOrder">
                                                                            <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="client_name"></td>
                                                    
                                                    <td class="due_date"></td> 
                                                    <td class="status">
                                                        <span  class="badge badge-soft-secondary text-uppercase"></span>
                                                    </td>
                                                    <td class="priority">
                                                        <span class="badge bg-danger text-uppercase"></span>
                                                    </td>
                                                    
                                                </tr>
                                                
                                            </tbody>
                                            <% } %>
                                        
                                    </table>
                                    
                                    <!--end table-->
                                </div>
                                <div class="d-flex justify-content-end mt-2">
                                    <div class="pagination-wrap hstack gap-2">
                                        <% if (pages > 0) { %>
                                            <ul class="pagination listjs-pagination mb-0">
                                                <% if (current == 1) { %>
                                                    <li class="disabled"><a class="page">First</a></li>
                                                <% } else { %>
                                                    <li><a class="page" href="/tasks/1/<%= thingToSort %>">First</a></li>
                                                <% } %>
                                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                <% if (i !== 1) { %>
                                                    <li class="disabled"><a>...</a></li>
                                                <% } %>
                                                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                                    <% if (i == current) { %>
                                                        <li class="active"><a class="page"><%= i %></a></li>
                                                    <% } else { %>
                                                        <li><a class="page" href="/tasks/<%= i %>/<%= thingToSort %>"><%= i %></a></li>
                                                    <% } %>
                                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                                        <li class="disabled"><a>...</a></li>
                                                    <% } %>
                                                <% } %>
                                                <% if (current == pages) { %>
                                                    <li class="disabled"><a class="page">Last</a></li>
                                                <% } else { %>
                                                    <li><a class="page" href="/tasks/<%= pages %>/<%= thingToSort %>">Last</a></li>
                                                <% } %>
                                            </ul>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            
                            <!--end card-body-->
                        </div>

                        <div class="card" id="tasksList">
                            <div class="card-header align-items-center d-flex">
                                <h4 class="card-title mb-0 flex-grow-1">Completed Tasks</h4>
                            </div><!-- end card header -->


                            <div class="card-body">
                                <div class="table-responsive table-card mb-4">
                                    <table class="table align-middle table-nowrap mb-0" id="tasksTable">
                                        <thead class="table-light text-muted">
                                            <tr>
                                                <th class="sort" data-sort="tasks_name"><a href="tasksTitleFieldVal"></a> Task</th></a>
                                                <th class="sort" data-sort="client_name"><a href="clientNameFieldVal">Lead Name</th></a>
                                                <th class="sort" data-sort="due_date"><a href="ateDueFieldVal">Due Date</th></a>
                                                <th class="sort" data-sort="status"><a href="statusFieldVal">Status</th></a>
                                                <th class="sort" data-sort="priority"><a href="priorityFieldVal">Priority</a></th>
                                            </tr>
                                        </thead>
                                        <tbody class="list form-check-all">
                                            <% if (tasks.length > 0 && tasks.some(task => task.statusFieldVal === 'Completed')) { %>

                                                <% tasks.filter(task => task.statusFieldVal === "Completed").forEach(function (task) { %>
                                            <tr>
                                                <td class="id" style="display:none;"><%= task._id %></td>
                                                <td>
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1 tasks_name"><%=task.tasksTitleFieldVal %></div>
                                                        <div class="flex-shrink-0 ms-4">
                                                            <ul class="list-inline tasks-list-menu mb-0">
                                                                <li class="list-inline-item"><a class="edit-item-btn" href="#showModal"
                                                                        data-bs-toggle="modal"><i
                                                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i></a>
                                                                </li>
                                                                <li class="list-inline-item">
                                                                    <a class="remove-item-btn" data-bs-toggle="modal"
                                                                        href="#deleteOrder">
                                                                        <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                                
                                                <td class="client_name"><%=task.clientNameFieldVal %></td>
                                                <td class="due_date"><%= task.dateDueFieldVal.toDateString() %></td> 
                                                <td class="status">
                                                    <span  class="badge badge-soft-secondary text-uppercase"><%=task.statusFieldVal %></span>
                                                </td>
                                                <td class="priority">
                                                    <span class="badge bg-danger text-uppercase"><%=task.priorityFieldVal %></span>
                                                </td>
                                                
                                            </tr>
                                            
                                        </tbody> <% }) %>
                                        <% } else { %> 
                                            <tr>
                                                <td class="id" style="display:none;"></td>
                                                <td>
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1 tasks_name">Your completed tasks are empty!</div>
                                                        <div class="flex-shrink-0 ms-4">
                                                            <ul class="list-inline tasks-list-menu mb-0">
                                                                <li class="list-inline-item"><a class="edit-item-btn" href="#showModal"
                                                                        data-bs-toggle="modal"><i
                                                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i></a>
                                                                </li>
                                                                <li class="list-inline-item">
                                                                    <a class="remove-item-btn" data-bs-toggle="modal"
                                                                        href="#deleteOrder">
                                                                        <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                                
                                                <td class="client_name"></td>
                                                <td class="due_date"></td> 
                                                <td class="status">
                                                    <span  class="badge badge-soft-secondary text-uppercase"></span>
                                                </td>
                                                <td class="priority">
                                                    <span class="badge bg-danger text-uppercase"></span>
                                                </td>
                                                
                                            </tr>
                                            
                                        </tbody><% } %>
                                    
                                    </table>
                                    
                                    <!--end table-->
                    
                    <!--end table-->
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <div class="pagination-wrap hstack gap-2">
                        <% if (pages > 0) { %>
                            <ul class="pagination listjs-pagination mb-0">
                                <% if (current == 1) { %>
                                    <li class="disabled"><a class="page">First</a></li>
                                <% } else { %>
                                    <li><a class="page" href="/tasks/1/<%= thingToSort %>">First</a></li>
                                <% } %>
                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                <% if (i !== 1) { %>
                                    <li class="disabled"><a>...</a></li>
                                <% } %>
                                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if (i == current) { %>
                                        <li class="active"><a class="page"><%= i %></a></li>
                                    <% } else { %>
                                        <li><a class="page" href="/tasks/<%= i %>/<%= thingToSort %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                        <li class="disabled"><a>...</a></li>
                                    <% } %>
                                <% } %>
                                <% if (current == pages) { %>
                                    <li class="disabled"><a class="page">Last</a></li>
                                <% } else { %>
                                    <li><a class="page" href="/tasks/<%= pages %>/<%= thingToSort %>">Last</a></li>
                                <% } %>
                            </ul>
                        <% } %>
                    </div>
                </div>
            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->



